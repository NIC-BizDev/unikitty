<section id="dashboard-auth-empty-portfolio">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-md-7">
				<div class="page-header"><h2>Latest Drug Recalls</h2></div>
				{{#each model.results as |recall|}}
		        <div class="recall">
		            <div class="row">
		                <div class="col-sm-8 col-md-9">
		                    <h3 class="title-recall"><span class="label label-success">{{recall.status}}</span>Recall Number: {{recall.recall_number}}</h3>
		                    <p><strong class="prepend">Product Description:</strong> {{recall.product_description}}</p>
		                    <p><strong class="prepend">Recall Reason:</strong> {{recall.reason_for_recall}}</p>
		                    <p><strong class="prepend">Initiation Date:</strong> {{format-date recall.recall_initiation_date}} &bull; <strong class="prepend">Report Date:</strong> {{format-date recall.report_date}}</p>
		                    <p><strong class="prepend">Reporting Firm:</strong> {{recall.recalling_firm}}</p>
		                </div>
		                <div class="col-sm-4 col-md-3 text-center">
		                    <h4>Recall Distribution:</h4>
		                    {{us-maps distribution_pattern=recall.distribution_pattern}}
		                </div>
		            </div>
		            <hr />
		        </div>
			    {{/each}}
			</div>
			<div class="col-sm-4 col-md-5">
				<div class="page-header"><h2>My Meds</h2></div>
				{{application.model}}
				{{application.links.portfolio}}
				{{name}}
				{{model.name}}
				<p>There are no drugs saved.</p>
				<form role="search">
					<div class="form-group">
						<label class="sr-only">Search MyFDA</label>
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Search drugs..." />
							<span class="input-group-btn">
								<button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i></button>
							</span>
						</div>
						<p class="help-block">You will be able to save drug(s) in order to receive future safety alerts.</p>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
